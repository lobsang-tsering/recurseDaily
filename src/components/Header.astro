---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <h2 class="site-title">
      <a href={`${import.meta.env.BASE_URL}/`} class="site-title-link">
        <img
          src={`${import.meta.env.BASE_URL}/favicon-32x32.png`}
          alt="Site Logo"
          class="site-logo"
        />
        {SITE_TITLE}
      </a>
    </h2>
    <div class="topnav" id="myTopnav">
      <HeaderLink href={`${import.meta.env.BASE_URL}/`}>Home</HeaderLink>
      <HeaderLink href={`${import.meta.env.BASE_URL}/leetcode`}
        >Leetcode</HeaderLink
      >
      <HeaderLink href={`${import.meta.env.BASE_URL}/about`}>About</HeaderLink>
      <a href="javascript:void(0);" class="icon" id="menuToggle">
        <i class="fa fa-bars"></i>
      </a>
    </div>
    <div class="social-links">
      <a href="https://www.linkedin.com/in/lobsangtsering/" target="_blank">
        <span class="sr-only">Follow Lobsang on LinkedIn</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          fill="currentColor"
          class="bi bi-linkedin"
          viewBox="0 0 16 16"
        >
          <path
            d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"
          ></path>
        </svg>
      </a>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }

  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }

  .site-title {
    display: flex;
    align-items: center;
  }

  .site-title-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: inherit;
  }

  .site-logo {
    width: 32px;
    height: 32px;
    margin-right: 0.25rem;
    vertical-align: middle;
  }

  .topnav {
    overflow: hidden;
  }

  .topnav .icon {
    position: absolute;
    right: 0;
    top: 0;
    display: none;
  }

  @media screen and (max-width: 720px) {
    .topnav a:not(.icon) {
      display: none;
    }
    .topnav a.icon {
      float: right;
      display: block;
    }
    nav {
      flex-direction: column;
    }

    /* Animation for the responsive menu */
    .topnav.responsive {
      animation: slideDown 0.3s ease-in-out forwards;
    }

    /* This only affects the non-responsive state */
    .topnav:not(.responsive) a:not(.icon) {
      animation: fadeOut 0.3s ease forwards;
    }

    @keyframes slideDown {
      from {
        max-height: 0;
        opacity: 0;
      }
      to {
        max-height: 300px;
        opacity: 1;
      }
    }

    @keyframes fadeOut {
      from {
        opacity: 1;
        transform: translateY(0);
      }
      to {
        opacity: 0;
        transform: translateY(-10px);
      }
    }
  }

  @media screen and (max-width: 720px) {
    .topnav.responsive {
      margin: 0 auto;
    }
    .topnav.responsive .icon {
      position: absolute;
      right: 0;
      top: 0;
    }
    .topnav.responsive a:not(.icon) {
      float: none;
      display: block;
      text-align: left;
      animation: fadeIn 0.3s ease forwards;
    }

    /* Animation for closing the menu */
    .topnav.closing a:not(.icon) {
      animation: fadeOut 0.3s ease forwards;
    }
    .topnav.closing {
      animation: slideUp 0.3s ease-in-out forwards;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes slideUp {
      from {
        max-height: 300px;
        opacity: 1;
      }
      to {
        max-height: 0;
        opacity: 0;
      }
    }

    .social-links {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuToggle = document.getElementById("menuToggle");
    if (!menuToggle) {
      console.error("Menu toggle element not found");
      return;
    }

    const icon = menuToggle.querySelector("i");
    if (!icon) {
      console.error("Icon element not found in menu toggle");
      return;
    }

    const topnav = document.getElementById("myTopnav");

    // Function to close the menu
    const closeMenu = () => {
      if (topnav && topnav.classList.contains("responsive")) {
        // Add a class to trigger the close animation
        topnav.classList.add("closing");

        // After animation completes, remove both classes
        setTimeout(() => {
          topnav.className = "topnav";
          if (icon) {
            icon.classList.remove("fa-times");
            icon.classList.add("fa-bars");
          }
        }, 300); // Match this to the animation duration
      }
    };

    menuToggle.addEventListener("click", (e) => {
      e.stopPropagation(); // Prevent this click from bubbling to document
      console.log("Menu toggle clicked");
      if (topnav) {
        if (topnav.className === "topnav") {
          topnav.className += " responsive";
          icon.classList.remove("fa-bars");
          icon.classList.add("fa-times");
        } else {
          closeMenu();
        }
      } else {
        console.error("Topnav element not found");
      }
    });

    // Prevent clicks on the navigation menu from closing it
    if (topnav) {
      topnav.addEventListener("click", (e) => {
        e.stopPropagation();
      });
    }

    // Close the menu when clicking anywhere else on the document
    document.addEventListener("click", () => {
      closeMenu();
    });
  });
</script>
