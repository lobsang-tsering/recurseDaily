---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="navbar">
  <div class="container">
    <nav class="nav-container">
      <input type="checkbox" class="checkbox" id="nav-toggle" />
      <label for="nav-toggle" class="hamburger-lines">
        <span class="line line1"></span>
        <span class="line line2"></span>
        <span class="line line3"></span>
      </label>
      <h2 class="site-title logo">
        <a href={`${import.meta.env.BASE_URL}/`} class="site-title-link">
          <img
            src={`${import.meta.env.BASE_URL}/favicon-32x32.png`}
            alt="Site Logo"
            class="site-logo"
          />
          {SITE_TITLE}
        </a>
      </h2>
      <ul class="menu-items internal-links">
        <li>
          <HeaderLink href={`${import.meta.env.BASE_URL}/`}>Home</HeaderLink>
        </li>
        <li>
          <HeaderLink href={`${import.meta.env.BASE_URL}/leetcode`}
            >Leetcode</HeaderLink
          >
        </li>
        <li>
          <HeaderLink href={`${import.meta.env.BASE_URL}/about`}
            >About</HeaderLink
          >
        </li>
      </ul>
      <div class="social-links">
        <a href="https://www.linkedin.com/in/lobsangtsering/" target="_blank">
          <span class="sr-only">Follow Lobsang on LinkedIn</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            fill="currentColor"
            class="bi bi-linkedin"
            viewBox="0 0 16 16"
          >
            <path
              d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"
            ></path>
          </svg>
        </a>
        <a href="https://x.com/real_lobsang" target="_blank">
          <span class="sr-only">Follow Lobsang on Twitter</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            fill="currentColor"
            class="bi bi-twitter-x"
            viewBox="0 0 16 16"
          >
            <path
              d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z"
            ></path>
          </svg>
        </a>
        <a
          href="https://github.com/lobsang-tsering/recurseDaily"
          target="_blank"
        >
          <span class="sr-only">Go to Lobsang's repo</span>
          <svg
            viewBox="0 0 16 16"
            aria-hidden="true"
            width="32"
            height="32"
            astro-icon="social/github"
          >
            <path
              fill="currentColor"
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            ></path>
          </svg>
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const checkbox = document.getElementById("nav-toggle");
    const menu = document.querySelector(".menu-items");

    document.addEventListener("click", (event) => {
      const isClickInsideMenu = menu?.contains(event.target);
      const isClickOnToggle = event.target.closest(
        ".hamburger-lines, #nav-toggle"
      );

      if (!isClickInsideMenu && !isClickOnToggle && checkbox.checked) {
        checkbox.checked = false;
      }
    });
  });
</script>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  header.navbar {
    width: 100%;
    background: white;
    box-shadow: 0 1px 4px rgb(146 161 176 / 15%);
  }

  .container {
    max-width: 1050px;
    width: 90%;
    margin: auto;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 62px;
    position: relative;
  }

  .site-title {
    display: flex;
    align-items: center;
    font-size: 1.2rem;
    color: #0e2431;
    margin: 0;
  }

  .site-title-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: inherit;
  }

  .site-logo {
    width: 32px;
    height: 32px;
    margin-right: 0.25rem;
    vertical-align: middle;
  }

  .internal-links {
    display: flex;
    align-items: center;
    margin-left: auto;
  }

  .navbar .menu-items li {
    list-style: none;
  }

  .navbar .menu-items a {
    text-decoration: none;
    color: #0e2431;
    font-family: "Poppins", sans-serif;
    font-weight: 500;
    font-size: 1.2rem;
    padding: 0.7rem;
    border-bottom: 4px solid transparent;
  }

  .navbar .menu-items a:hover,
  .navbar .menu-items a.active {
    font-weight: bolder;
    border-bottom-color: var(--accent);
  }

  .social-links {
    display: flex;
    align-items: center;
  }

  .social-links a {
    padding: 0.7rem;
    color: #0e2431;
  }

  .nav-container .checkbox {
    position: absolute;
    display: block;
    height: 32px;
    width: 32px;
    top: 20px;
    right: 20px;
    z-index: 5;
    opacity: 0;
    cursor: pointer;
  }

  .nav-container .hamburger-lines {
    display: none;
    height: 26px;
    width: 32px;
    position: absolute;
    top: 17px;
    right: 20px;
    z-index: 2;
    flex-direction: column;
    justify-content: space-between;
  }

  .nav-container .hamburger-lines .line {
    display: block;
    height: 4px;
    width: 100%;
    border-radius: 10px;
    background: #0e2431;
  }

  .nav-container .hamburger-lines .line1 {
    transform-origin: 100% 0%;
    transition: transform 0.4s ease-in-out;
  }

  .nav-container .hamburger-lines .line2 {
    transition: transform 0.2s ease-in-out;
  }

  .nav-container .hamburger-lines .line3 {
    transform-origin: 100% 100%;
    transition: transform 0.4s ease-in-out;
  }

  .nav-container input[type="checkbox"]:checked ~ .menu-items {
    transform: translateX(0);
  }

  .nav-container input[type="checkbox"]:checked ~ .hamburger-lines .line1 {
    transform: rotate(-45deg);
  }

  .nav-container input[type="checkbox"]:checked ~ .hamburger-lines .line2 {
    transform: scaleY(0);
  }

  .nav-container input[type="checkbox"]:checked ~ .hamburger-lines .line3 {
    transform: rotate(45deg);
  }

  @media (max-width: 720px) {
    .nav-container .hamburger-lines {
      display: flex;
    }

    .navbar .menu-items {
      padding-top: 120px;
      box-shadow: inset 0 0 2000px rgba(255, 255, 255, 0.5);
      height: 100vh;
      width: 100%;
      transform: translateX(150%);
      display: flex;
      flex-direction: column;
      margin-right: -40px;
      padding-right: 50px;
      padding-left: 50px;
      transition: transform 0.5s ease-in-out;
      text-align: center;
      background: white;
      position: absolute;
      top: 0;
      right: 0;
      z-index: 1;
    }

    .navbar .menu-items li {
      margin-bottom: 1.2rem;
      font-size: 1.5rem;
      font-weight: 500;
    }

    .social-links {
      display: none;
    }

    .site-title.logo {
      position: absolute;
      top: 5px;
      left: 15px;
    }

    .nav-container input[type="checkbox"]:checked ~ .logo {
      display: none;
    }
  }
</style>
